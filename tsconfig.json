{
  "compilerOptions": {
    "skipLibCheck": true,
    "noEmitOnError": true,
    "module": "commonjs",
    "removeComments": true,
    "sourceMap": true,
    "target": "es6",
    "outDir": "dist",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "baseUrl": ".",
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "paths": {
      "@/*": ["src/*"],
      "@core/*": ["src/core/*"]
    }
  },
  "exclude": [
    "./node_modules",
    "./dist"
  ],
  "include": [
    "src/**/*",
    "assets"
  ],
  "files": [
    "./src/index.d.ts"
  ]
}